  <div class="feedpage  container">

    <div class="row" >
        <div class="headimg mb-5  col-12 mt-4">
          <img  class='img-fluid rounded-pill' src="https://i.imgur.com/Binzr0Z.png" alt="">
      </div> 
      <div class=" col-10 offset-1 mt-4">
        
         <div class="row mb-4">
            <div class="card mb-4">
              <div class="card-footer">
                <div class="profile">
                  <div class=""><span class="round"><img src="<%= post.author.pfp %>" alt="user"
                        width="40"></span>&nbsp;<%= post.author.username %></div>
                </div>
              </div>
              <% if (post.image) { %>
                <img class="card-img-top mt-2" src="<%= post.image %>" alt="Card image cap">
                <% } %>

                  <div class="card-body ">
                    <h5 class="card-title">
                      <%=post.title%>
                    </h5>
                    <p class="card-text">
                      <%= post.caption %>
                    </p>
                    <p class="card-text">
                      <%= post.descriptions %>
                    </p>
                    <p style="font-size: 1rem;">
                     <Strong><%= post.likes %></Strong>  got Inspired</h6>
                  </div>
                  <div class="card-footer">
                    
                    <div class="like">
                      <% if (!(post.reallikes.includes(currentuser._id))) { %>
                        <form  action="/feed/like/<%= post._id %>">
                          <button  type='submit' class="btn btn-success display:inline-block"><iconify-icon style="font-size: 2rem;" icon="mdi:account-heart"></iconify-icon><br>Got Inspired</button>
                        </form>
                      </div>
                      
                      <% }else{ %>
                        <form  action="/feed/unlike/<%= post._id %>">
                          <h6>You got inspired from this post. <strong>Happy getting Tranquiled</strong>  </h6>
                          <button  type='submit' class="btn btn-success display:inline-block"><iconify-icon style="font-size: 2rem;" icon="mdi:account-heart"></iconify-icon><br>Not Inspiring</button>
                        </form>
                      </div>
                     <%}  %>
                    <small class="text-muted">
                      <%= post.uploaddate %>
                    </small>

                  </div>
            </div>
